{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": "off",
        "global-require": "off",
        "no-use-before-define": "off",
        "react/jsx-filename-extension": ["error", { "extensions": [".tsx"]}],
        "import/extensions": ["error", { ".tsx": "never" }]
    },
    "settings": {
        "import/resolver": {
            "typescript": "<root>/tsconfig.json"
        }
    }
    
}
